{
  "swagger": "2.0",
  "info": {
    "title": "FootBet",
    "description": "An API to manipulate soccer stats",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/players": {
      "get": {
        "description": "It returns all players currently on database",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "description": "It adds a new player to the database",
        "parameters": [
          {
            "in": "body",
            "name": "Player",
            "description": "The player to add",
            "required": "true",
            "schema":
              {
                  "properties": {
                      "name": {
                        "type": "string",
                        "example": "Lionel Messi"
                      },
                      "overall": {
                        "type": "number",
                        "example": 91
                      },
                      "nacionality": {
                        "type": "string",
                        "example": "argentina"
                      },
                      "club_id": {
                        "type": "number",
                        "example": 1
                      },
                      "main_position": {
                        "type": "string",
                        "example": "CF"
                      },
                      "photo": {
                        "type": "string",
                        "example": "data:image/png;base64..."
                      }
                  }
              }
          }
        ],
        "responses": {
          "201": {
            "description": "success"
          }
        }
      }
    }
  }
}